@model IEnumerable<ShopGiayHHL.Models.Categorys>
@{
    ViewBag.Title = "Trang chủ - HHL Shoes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Action("SlideShow", "Module")

<div class="container my-4 py-3">

    <!---->
    @foreach (var rowcat in Model)
    {
        <div class="row">
            <div class="col-md-5 my-2">
                <img src="~/Public/img/Category/@rowcat.Img" class="img-fluid" style="height:120px" alt="Alternate Text" />
            </div>
            <div class="col-md-7">
                <h3>@rowcat.Name</h3>

                <p>
                    @rowcat.MetaDesc
                </p>
                <a href="~/@rowcat.Slug" style="text-decoration: none; color: #000000;">
                    XEM TẤT CẢ <i class="fas fa-chevron-right"></i>
                </a>
                
            </div>
        </div>
        @Html.Action("HomeProduct", "Site", new { @catid = rowcat.Id });

    }
    <!---->


</div>
