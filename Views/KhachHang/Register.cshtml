
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<div class="container my-4">
    <h1 class="text-center">ĐĂNG KÝ KHÁCH HÀNG</h1>
    <div class="row">

        <div class="col-md-12">
            <div class="form-group">
                <label><strong>Họ tên (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD:Mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Số điện thoại (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD:Mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Email (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD:Mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Tên đăng nhập (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD: Tên đăng nhập hoặc Email" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Mật khẩu (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD: Mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label><strong>Xác nhận mật khẩu (<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" placeholder="VD: Xác nhận mật khẩu khách hàng" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <p></p>
                <a href="@Url.Action("Register","KhachHang")" class="btn btn-danger btn-sm"><i class="fas fa-lock"></i> Đăng Kí</a>
            </div>
            <div class="form-group">
                (<span class="text-danger">*</span>) Bắt buộc phải nhập !

            </div>

        </div>
    </div>
</div>

